---
import About from "../components/sections/about/index.astro";
import Overview from "../components/sections/Overview.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<div
  id="LEFT-PANEL-wrapper"
  class="bg-mutedTeal h-full md:absolute relative md:left-0 sm:bottom-0 md:w-2/5 w-full overflow-y-scroll overflow-x-hidden"
>
  <div
    id="LEFT-PANEL-container"
    class="bg- py-5 2xl:pl-5 2xl:pr-[30px] pl-1 pr-5 bg- border-r-2 border-black"
  >
    <Header />
    <div id="indent-left" class="2xl:pl-0 pl-2">
      <About />
      <Overview />
    </div>
  </div>
  <div
    id="left-panel-footer"
    class="flex justify-end items-end bg-aliceBlue border-r border-black"
  >
  </div>
  <div class="text-right text-parchment pr-5">
    <Footer />
  </div>
</div>
